## Generic Aliases
alias k=kubectl
alias t=terraform
alias terrafrom=terraform
alias gits="git status"
alias gs="git status"


## Neovim
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/zsh_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export GPG_TTY=$(tty)
alias nv="nvim"
export EDITOR=$(which nvim)

## Enable Zsh completion
fpath=(/Users/zachary.gallagher/.docker/completions $fpath)
autoload -Uz compinit
compinit -i

## fzf
eval "$(fzf --zsh)"

## BAT
export BAT_THEME=Dracula

## eza
alias ls="eza --color=always --icons=auto --git"
alias lt="eza -l --color=always -snew --icons=auto --git"

## dracula dircolors
# eval "$(dircolors ~/.dir_colors/dircolors)"

## zoxide
eval "$(zoxide init zsh)"
alias cd="z"

## Starship
export STARSHIP_CONFIG=~/.config/starship/starship.toml
eval "$(starship init zsh)"


eval "$(thefuck --alias)"

# Bindkeys
bindkey "^H" vi-backward-kill-word
bindkey "^[f" forward-word
bindkey "^[b" backward-word
bindkey  "^[[H"   beginning-of-line
bindkey  "^[[F"   end-of-line
bindkey  "^F"   end-of-line


# Java

export PATH="/opt/homebrew/opt/openjdk@21/bin:$PATH"

